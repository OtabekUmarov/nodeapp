<section class="main_full inner_page">
  <div class="container-fluid">
    <div class="row">
      <div class="full">
        <h3>{{title}}</h3>
      </div>
    </div>
  </div>
</section>

<section class="layout_padding section about_dottat">
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
        <div class="">
          <div class="subjectid-img">
            <img src="/{{subject.img}}" alt="" />
          </div>
          <p>
            {{subject.content}}
          </p>
        </div>
      </div>
      <div class="col-lg-4">
        {{#if questionCheck}}
        <div class="side-left">
          {{#if question}}
          <div class="side-left-item">
            <a href="/subject/img/{{id}}">Rasmli boshqotirmalar</a>
          </div>
          {{/if}}
          {{#if text}}
          <div class="side-left-item">
            <a href="/subject/text/{{id}}">Matnli boshqotirmalar</a>
          </div>
          {{/if}}
          {{#if matematik}}
          <div class="side-left-item">
            <a href="/subject/matematik/{{id}}">Matematik boshqotirmalar</a>
          </div>
          {{/if}}
          {{#if topishmoq}}
          <div class="side-left-item">
            <a href="/subject/topishmoq/{{id}}">Topishmoqlar</a>
          </div>
          {{/if}}
          {{#if interest}}
          <div class="side-left-item">
            <a href="/subject/interest/{{id}}">Qiziqarli savollar</a>
          </div>
          {{/if}}
          {{#if critical}}
          <div class="side-left-item">
            <a href="/subject/critical/{{id}}">Mantiqiy savollar</a>
          </div>
          {{/if}}
        </div>
        {{else}}
        <div class="side-left">
          <h4>
            {{subject.name}} fani bo'yicha savollar mavjud emas
          </h4>
        </div>
        {{/if}}

      </div>
    </div>
  </div>
</section>