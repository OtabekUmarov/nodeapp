<form action="/admin/subject/save" method="post" class="user" enctype="multipart/form-data">
  <input type="hidden" name="_csrf" value="{{csrf}}" />
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-6">
      <div class="row">
        <div class="col-lg-12">
          <div class="form-group">
            <label>
              Fan nomi
              <input name="_id" value="{{subject._id}}" type="hidden"/>
              <input type="text" value="{{subject.name}}" class="form-control form-control-user" name="name" placeholder="Fan nomi" required />
            </label>
          </div>
          <div class="form-group">
            <textarea name="content" value="{{subject.content}}" class="form-control form-control-user" id="" cols="30" rows="10">{{subject.content}}</textarea>
          </div>
        </div>
        <div class="col-12">
          <button type="submit" class="btn btn-primary">Kiritish</button>
        </div>
      </div>
    </div>
  </div>
</form>