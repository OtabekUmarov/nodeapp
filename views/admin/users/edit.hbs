<form action="/admin/users/save" method="post" class="user" enctype="multipart/form-data">
  <input type="hidden" name="_csrf" value="{{csrf}}" />
  <input type="hidden" name="_id" value="{{user._id}}" />
  <input type="hidden" name="password" value="{{user.password}}" />
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
      <div class="row">
        <div class="col-lg-12">
          <div class="form-group">
            <input type="text" class="form-control form-control-user" name="name" value="{{user.name}}"
              placeholder="Ismi" required />
          </div>
        </div>
        <div class="col-lg-12">
          <div class="form-group">
            <input type="text" class="form-control form-control-user" name="lname" value="{{user.lname}}"
              placeholder="Familiyasi" required />
          </div>
        </div>
        <div class="col-lg-12">
          <div class="form-group">
            <input type="email" class="form-control form-control-user" name="email" value="{{user.email}}"
              placeholder="Email" required />
          </div>
        </div>
        <div class="col-lg-12">
          <div class="form-group">
            <label>Parolni o'zgartirish
              <input type="password" class="form-control form-control-user" name="respassword" placeholder="Password" />
            </label>
          </div>
        </div>

        <div class="col-lg-12">
          <div class="form-group">
            {{#if user.img}}
            <img src="/{{user.img}}" alt="" width="140" />
            {{!-- <input type="file" name="img" /> --}}
            {{else}}
            <input type="file" name="img" />
            {{/if}}
          </div>
        </div>
        <div class="col-12">
          <button type="submit" class="btn btn-primary">Kiritish</button>
        </div>
      </div>
    </div>
  </div>

</form>