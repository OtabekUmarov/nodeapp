<form action="/admin/puzzle/text" method="post" class="user" enctype="multipart/form-data">
  <input type="hidden" name="_csrf" value="{{csrf}}" />
  <input type="hidden" name="subjectId" value="{{subjectId}}" />
  <input type="hidden" name="type" value="1" />


  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
      <div class="row">

        <div class="col-lg-12">
          <div class="form-group">
            <label>Savolni kiriting
              <input type="text" class="form-control form-control-user" name="question" placeholder="Savolni kiriting"
                required />
            </label>
          </div>
        </div>
        <div class="col-lg-12">
          <div class="form-group">
            <label>Javonni kiriting
              <input type="text" class="form-control form-control-user" name="answer" placeholder="Javobni kiriting"
                required />
            </label>
          </div>
        </div>
        <div class="col-12">
          <button type="submit" class="my-btn btn btn-primary btn-user btn-block">Kiritish</button>
        </div>
      </div>
    </div>
  </div>
</form>